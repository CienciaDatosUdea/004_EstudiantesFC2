#include <cmath>
#include <vector>
#include <ostream>
#include <iostream>
#include <../include/fdtd.h>

double Smart_DeltaT(int Num_nodes);

int main(){
    int Num_nodes = 10;
    double E0 = 0.; 
    double H0 = 0.;
    double Integration_time = 1.;
    double DeltaT = Smart_DeltaT(Num_nodes); 
    std::string boundary_cond = "periodic"; 

    Lee_Net My_Net( Num_nodes,  E0 ,  H0);
    My_Net.E[0][Num_nodes/2] = 1.; // Pulso inicial en el centro

    My_Net.Integrate(Integration_time, DeltaT, boundary_cond ,"", true );

    return 0;
}

double Smart_DeltaT(int Num_nodes){
    double c = 1.;
    // Calcula un DeltaT inteligente basado en el n√∫mero de nodos
    double Delta = 1.0 / (Num_nodes - 1.);
    return 0.5 * Delta /(c * 1.0); 
}